<div class="container-fluid ">
<div class="row row-cols-1 row-cols-md-3 g-4"" > 

  
<% @posts.each do |post| %>
  <div class="col my-2 ">
    <div class="card text-white bg-dark h-100">
      <div class="card-header card-title">
      <h3><%= post.user.name %></h3>
      </div>
        <div class="card-body text-dark bg-light">
          <h5 class="card-title">Title: <%= post.title %></h5>
          <p class="card-text lead"><%= post.body %></p>
        </div>
        
        <div class="card-footer">
        <% if user_signed_in? && current_user.id == post.user_id %>
          <small class="text-muted"> <span><%= link_to 'Edit', edit_post_path(post) %></span></small>
          <small class="text-muted"> <span><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></span></small>
           <% else %>
          <p>Comments is disabled</p>
           <% end %>
        </div>
       
    </div>
  </div>
  <% end %>
</div>
</div>




